
<div class="class">
<% @recipes.each do |recipe| %>
  <div class="col-md-4">
    <div class="well thumbnail index-list">
    <h2><a href = '/recipes/<%=recipe.id%>'><%= recipe.title %></a></h2>
    <h6>Updated On: <%= recipe.friendly_updated_at %></h6>
    <h2>By: <%= recipe.chef %></h2>
    <h3>Time: <%= recipe.friendly_prep_time %></h3>
    <h2>Ingredients:</h2>
    <ul>
      <% recipe.ingredients_list.each do |ingredient| %>
        <li><%= ingredient %></li>
      <% end %>
    </ul>
    <h2>Directions: </h2>
    <ol>
    <% recipe.directions_list.each do |direction| %>
      <li><%= direction %></li>
      <% end %>
    </ol>
    </div>
  </div>
<% end %>
</div>